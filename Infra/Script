CREATE TABLE [User] (
    [Id] int NOT NULL IDENTITY,
    [Name] nvarchar(max) NOT NULL,
    [Email] nvarchar(max) NOT NULL,
    [Status] int NOT NULL,
    [HistoryId] int NOT NULL,
    CONSTRAINT [PK_User] PRIMARY KEY ([Id])
);
GO

CREATE TABLE [TB_HISTORY] (
    [Id] int NOT NULL IDENTITY,
    [CreateDate] datetime2 NOT NULL,
    [UserId] int NOT NULL,
    [CategoryId] int NOT NULL,
    [ClientId] int NOT NULL,
    [ProductId] int NOT NULL,
    [OrderId] int NOT NULL,
    [OrderItemId] int NOT NULL,
    [StockId] int NOT NULL,
    CONSTRAINT [PK_TB_HISTORY] PRIMARY KEY ([Id]),
    CONSTRAINT [FK_TB_HISTORY_TB_CATEGORY_CategoryId] FOREIGN KEY ([CategoryId]) REFERENCES [TB_CATEGORY] ([Id]) ON DELETE CASCADE,
    CONSTRAINT [FK_TB_HISTORY_TB_CLIENT_ClientId] FOREIGN KEY ([ClientId]) REFERENCES [TB_CLIENT] ([Id]) ON DELETE CASCADE,
    CONSTRAINT [FK_TB_HISTORY_TB_ORDER_ITEM_OrderItemId] FOREIGN KEY ([OrderItemId]) REFERENCES [TB_ORDER_ITEM] ([Id]) ON DELETE CASCADE,
    CONSTRAINT [FK_TB_HISTORY_TB_ORDER_OrderId] FOREIGN KEY ([OrderId]) REFERENCES [TB_ORDER] ([Id]) ON DELETE CASCADE,
    CONSTRAINT [FK_TB_HISTORY_TB_PRODUCT_ProductId] FOREIGN KEY ([ProductId]) REFERENCES [TB_PRODUCT] ([Id]) ON DELETE CASCADE,
    CONSTRAINT [FK_TB_HISTORY_TB_STOCK_StockId] FOREIGN KEY ([StockId]) REFERENCES [TB_STOCK] ([Id]) ON DELETE CASCADE,
    CONSTRAINT [FK_TB_HISTORY_User_UserId] FOREIGN KEY ([UserId]) REFERENCES [User] ([Id]) ON DELETE CASCADE
);
GO

CREATE TABLE [TB_HISTORYFIELD] (
    [Id] int NOT NULL IDENTITY,
    [Action] int NOT NULL,
    [FieldName] varchar(60) NOT NULL,
    [CurrentValue] varchar(100) NOT NULL,
    [HistoryId] int NOT NULL,
    [Date] datetime2 NOT NULL,
    [Status] int NOT NULL,
    CONSTRAINT [PK_TB_HISTORYFIELD] PRIMARY KEY ([Id]),
    CONSTRAINT [FK_TB_HISTORYFIELD_TB_HISTORY_HistoryId] FOREIGN KEY ([HistoryId]) REFERENCES [TB_HISTORY] ([Id]) ON DELETE CASCADE
);
GO

CREATE UNIQUE INDEX [IX_TB_HISTORY_CategoryId] ON [TB_HISTORY] ([CategoryId]);
GO

CREATE UNIQUE INDEX [IX_TB_HISTORY_ClientId] ON [TB_HISTORY] ([ClientId]);
GO

CREATE UNIQUE INDEX [IX_TB_HISTORY_OrderId] ON [TB_HISTORY] ([OrderId]);
GO

CREATE INDEX [IX_TB_HISTORY_OrderItemId] ON [TB_HISTORY] ([OrderItemId]);
GO

CREATE UNIQUE INDEX [IX_TB_HISTORY_ProductId] ON [TB_HISTORY] ([ProductId]);
GO

CREATE UNIQUE INDEX [IX_TB_HISTORY_StockId] ON [TB_HISTORY] ([StockId]);
GO

CREATE UNIQUE INDEX [IX_TB_HISTORY_UserId] ON [TB_HISTORY] ([UserId]);
GO

CREATE INDEX [IX_TB_HISTORYFIELD_HistoryId] ON [TB_HISTORYFIELD] ([HistoryId]);
GO

